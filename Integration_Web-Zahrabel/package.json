{
  "name": "collocov",
  "version": "1.0.0",
  "description": "COLLOCOV - Colocation étudiante et covoiturage",
  "scripts": {
    "build-css": "sass styles/main.scss dist/css/main.css",
    "watch-css": "sass --watch styles/main.scss:dist/css/main.css",
    "build-tailwind": "tailwindcss -i ./styles/input.css -o ./dist/css/tailwind.css --minify",
    "watch-tailwind": "tailwindcss -i ./styles/input.css -o ./dist/css/tailwind.css --watch",
    "build": "npm run build-css && npm run build-tailwind",
    "dev": "npm run watch-css & npm run watch-tailwind"
  },
  "keywords": [
    "colocation",
    "covoiturage",
    "étudiant"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "sass": "^1.69.5",
    "tailwindcss": "^3.4.1"
  }
}

